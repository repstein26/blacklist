<h2>Recently Added</h2>
<div>
  <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Phone</th>
          <th>Email</th>
          <th style="width: 35%">Reason</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
  <% entries.forEach(entry => { %>
      <tr>
          <td><%= entry.firstName %></td>
          <td><%= entry.lastName %></td>
          <td><%= entry.phone %></td>
          <td><%= entry.email %></td>
          <td><%= entry.reason %></td>
          <td><a href="/entries/<%=entry.id%>" class="btn btn-primary">Details</a></td>
      </tr>
  
<% }); %>
      </tbody>
    </table>
</div>