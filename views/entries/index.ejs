<h2>Search Blacklist</h2>
<form action="/entries" method="GET">
    <div class="form-group">
        <label for="firstName">First Name</label>
        <input type="text" class="form-control" name="firstName" value="<%= searchOptions.firstName %>">   
    </div>
    <div class="form-group">
        <label for="lastName">Last Name</label>
        <input type="text" class="form-control" name="lastName" value="<%= searchOptions.lastName %>">
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>
<br>
<div class="container">
    <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>First</th>
            <th>Last</th>
            <th>DOB</th>
            <td></td>
            <td></td>
            <td></td>
          </tr>
        </thead>
        <tbody>
    <% entries.forEach(entry => { %>
        <tr>
            <td><%= entry.firstName %></td>
            <td><%= entry.lastName %></td>
            <td><%= moment(entry.dateOfBirth).format('YYYY-MM-DD') %></td>
            <td><a href="/entries/<%=entry.id%>" class="btn btn-primary">View</a></td>
            <td><a href="/entries/<%=entry.id%>/edit" class="btn btn-secondary">Edit</a></td>
            <td>
                <%- include('../partials/deleteForm',{
                        url: `/entries/${entry.id}` })%>
            </td>
        </tr>
    
<% }); %>
        </tbody>
      </table>
</div>

