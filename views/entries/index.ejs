<h2>Search Blacklist</h2>
<form action="/entries" method="GET">
    <div class="form-group">
        <label for="firstName">First Name</label>
        <input type="text" class="form-control" name="firstName" value="<%= searchOptions.firstName %>">   
    </div>
    <div class="form-group">
        <label for="lastName">Last Name</label>
        <input type="text" class="form-control" name="lastName" value="<%= searchOptions.lastName %>">
    </div>
    <div class="form-group">
        <label for="phone">Phone</label>
        <input type="text" class="form-control" name="phone" value="<%= searchOptions.phone %>">
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" class="form-control" name="email" value="<%= searchOptions.email %>">
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>
<br>
<div class="container">
    <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date of Birth</th>
            <td>Phone</td>
            <td>Email</td>
            <td></td>
          </tr>
        </thead>
        <tbody>
    <% entries.forEach(entry => { %>
        <tr>
            <td><%= entry.firstName %></td>
            <td><%= entry.lastName %></td>
            <td><%= moment(entry.dateOfBirth).format('MM/DD/YYYY') %></td>
            <td><%= entry.phone %></td>
            <td><%= entry.email %></td>
            <td><a href="/entries/<%=entry.id%>" class="btn btn-primary">Details</a></td>
        </tr>
    
<% }); %>
        </tbody>
      </table>
</div>

